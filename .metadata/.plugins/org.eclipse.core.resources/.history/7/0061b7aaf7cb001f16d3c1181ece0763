package classes;

import javax.swing.JOptionPane;
public class ExercRepeat {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String rsp = new String ();
		do {
		int n = Integer.parseInt(JOptionPane.showInputDialog(null, "Informe um numero: ").toString());
		JOptionPane.showMessageDialog(null, "Vc digitou " + n);
		 rsp = JOptionPane.showInputDialog(null, "Deseja continuar? [y/n]");
		}while (rsp != "N" || rsp != "n");
	}

}
